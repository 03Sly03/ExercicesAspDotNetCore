@model List<Marmoset>
@{
    ViewData["Title"] = "Ouistiti Favoris";
}

@if(Model.Count == 0)
{
    <p>Aucun singe favoris à afficher</p>
}
else
{
    @foreach (Marmoset marmoset in Model)
    {
        <p>
            @marmoset.Id @marmoset.Name @marmoset.Age
        </p>
        <a asp-action="Details" asp-controller="Marmoset" asp-route-id="@marmoset.Id" class="btn btn-primary">Détails</a>

    }
}