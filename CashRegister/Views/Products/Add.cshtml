@model Product;

<h1>@ViewData["Title"]</h1>

<form asp-action="Submit" enctype="multipart/form-data">
    <div class="mb-3 w-50">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" type="text" class="form-control" hidden>
    </div>
    <div class="mb-3 w-50">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control">
    </div>
    <div class="mb-3 w-50">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" type="text" class="form-control">
    </div>
    <div class="mb-3 w-50">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" class="form-control"> 
    </div>
    <div class="mb-3 w-50">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control"> 
    </div>
    <div class="mb-3 w-50">
        <label asp-for="CategoryId" class="form-label"></label>
        <input asp-for="CategoryId" type="number" class="form-control"> 
    </div>
